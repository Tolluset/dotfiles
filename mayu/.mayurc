# .mayurc
# setting file for mayu
# janus_wel <janus.wel.3@gmail.com>
# refer: http://mayu.sourceforge.net/

# general {{{1
# include files
include "109.mayu"

# global key mappings {{{1
keymap Global

# modifiers {{{2
# add "Caps Lock" to modifier "ctrl"
mod ctrl += Eisuu
def subst *Eisuu = *LeftControl

# set left ctrl to "Caps Lock"
mod ctrl -= LeftControl
def subst *LeftControl = *Eisuu

# substitutions {{{2
# open context menu with "Hiragana"
# "Hiragana" lies to the left of right "Alt"
def subst *Hiragana = *Applications

# set "NonConvert" to "Esc"
# "NonConvert" lies to the left of "Space"
def subst *NonConvert = *Esc

# set "Convert" to "Tab"
# "Convert" lies to the right of "Space"
def subst ~C-*Convert = *Tab

# toggle IME with "Ctrl+Convert"
key C-Convert = $ToggleIME

# window operation {{{2
# maximize & minimize
key C-A-i = &WindowMinimize     # m(I)nimize
key C-A-a = &WindowMaximize     # m(A)ximize

# moving window
# with feeling to use vim
key C-A-k = &WindowMove(0, -16) # move up 16 dots
key C-A-j = &WindowMove(0, 16)  # move down 16 dots
key C-A-h = &WindowMove(-16, 0) # move left 16 dots
key C-A-l = &WindowMove(16, 0)  # move right 16 dots

# misc
key C-A-o = &WindowSetAlpha(50) # toggle (O)pacity

# focus
key C-A-d = W-d                 # focus (D)esktop
key C-A-m = W-m                 # (M)inimize all window
key C-A-t = W-b                 # focus (T)asktray

# app-specific keys {{{2
# mayu
key C-A-r = &LoadSetting    # (R)eload
key C-A-w = &WindowIdentify # (W)indow research

# app-specific key mappings {{{1
# controlling Windows like vim
include "Windows-vim.mayu"

# Launchy {{{2
window Launchy /Launchy\.exe:QTool$/ : Global
key C-h   = BackSpace
key Tab   = Down
key S-Tab = Up

# IrfanView {{{2
window IrfanView /i_view32\.exe:IrfanView($|:FullScreenClass$|:#\d+:SysListView32$)/ : Global
key j = Down
key k = Up
key h = Left
key l = Right
key d = Delete
key S-j = PageDown
key S-k = PageUp

# STEP {{{2
window STEP /SuperTagEditor\.exe:Afx:[\da-f]{6}:[\da-f]:[\da-f]{5}:[\da-f]:[\da-f]+:AfxFrameOrView42s:SysListView32$/ : Global
key *j  = *Down
key *k  = *Up
key *h  = *Left
key *l  = *Right
key d   = Delete
key i   = F2
key S-i = F2 Home
key S-a = F2 End
key g   = Home
key S-g = End

# foobar2000 {{{2
window foobar2000 /foobar2000\.exe:\{E7076D1C-A7BF-4f39-B771-BCBE88F2A2A8\}:\{DA9A1375-A411-48a9-AF74-4AC29FF9BE9C\}:\{77653A44-66D1-49e0-9A7A-1C71898C0441\}:foo_ui_columns_splitter_panel_child_container:\{72FACC90-BB7E-4733-8449-D7537232AD26\}:foo_ui_columns_splitter_panel_child_container:NGLV/ : Global
key *j      = *Down
key *k      = *Up
key *l      = *Right
key *h      = *Left
key S-g     = End   # jump last of playlist
key g       = Home  # jump first of playlist
key Colon   = Applications  # show context menu

# notepad.exe {{{2
window notepad /notepad\.exe:Notepad:Edit$/ : Global
key C-h = BackSpace

# slide show on Power Point {{{2
window PowerPointSlideShow /POWERPNT\.EXE:screenClass:paneClassDC/ : Global
key j   = Down
key k   = Up
key h   = Left
key l   = Right
key g   = Home
key S-g = End

# comment textarea on commit dialog of TortoiseSVN {{{2
window TortoiseSVNCommitComment /TortoiseProc\.exe:#\d+:Scintilla/ : Global
key C-h = BackSpace

# cmd.exe {{{2
window CMD (/ConsoleWindowClass/ && /.*\bcmd\b.*/) : Global
key Tab = C-f
key C-l = c l s Enter
key C-d = e x i t Enter

# Mp3tag {{{2
window Mp3tag /Mp3tag\.exe:Afx:00400000:b:00010011:00000006:0024061E:AfxControlBar90su:Afx:00400000:8:00010011:0110005B:00000000:#32770/ : Global
key C-h = BackSpace

# Visual Studio Express Edition {{{2
window VisualStudio /(vcsexpress|VCExpress)\.exe/ : Global
key C-h = BackSpace

# Rekisa {{{2
window Rekisa /Rekisa\.exe/ : Global
key j       = Down
key k       = Up
key h       = Left
key l       = Right
key S-j     = S-Down
key S-k     = S-Up
key S-h     = S-Left
key S-l     = S-Right
key _0      = Home
key Caret   = Home
key S-_4    = End
key g       = C-Home
key S-g     = C-End
key n       = F3
key S-n     = S-F3
key r       = F5
key C-h     = LeftAlt v p
key C-l     = LeftAlt v n
key C-e     = C-Down
key C-y     = C-Up

# Google Chrome {{{2
window GoogleChrome /chrome\.exe/ : Global
key C-h = BackSpace


