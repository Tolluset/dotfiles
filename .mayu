# Initial Written:  2008/07/30
# Refer:            http://mayu.sourceforge.net/

# include files -----------------------------------------------------------
include "109.mayu"

# global key mappings -----------------------------------------------------
keymap Global

# add "Caps Lock" to modifier as "ctrl"
# set one-shot-modifire "Esc"
mod ctrl += !!英数
key *英数 = *Esc

# set left ctrl to "Caps Lock"
mod ctrl -= LeftControl
key *LeftControl = *英数

# open context menu with "カタカナ/ひらがな"
key ひらがな = Applications
key IL-*IC-ひらがな = Applications

# toggle IME with "無変換"
key *無変換 = 半角/全角
key IL-*IC-無変換 = 半角/全角

# set "変換" to "Tab"
key *変換 = *Tab
key IL-*IC-変換 = *Tab

# Window operation
key C-A-i = &WindowMinimize     # m(I)nimize
key C-A-a = &WindowMaximize     # m(A)ximize
#key C-A-p = &WindowClose        # close

key C-A-n = &WindowMoveVisibly  # (N)ormalize
key C-A-t = &WindowRaise        # to (T)op
key C-A-b = &WindowLower        # to (B)ottom
key C-A-o = &WindowSetAlpha(50) # toggle (O)pacity

# vim 風にウィンドウ移動
key C-A-k = &WindowMove(0, -16) # move up 16 dots
key C-A-j = &WindowMove(0, 16)  # move down 16 dots
key C-A-h = &WindowMove(-16, 0) # move left 16 dots
key C-A-l = &WindowMove(16, 0)  # move right 16 dots


# 窓使いの憂鬱用
# (R)eload
key C-A-r = &LoadSetting &HelpMessage(Mayu, "loading has succeeded!!")
# (W)indow research
key C-A-w = &WindowIdentify


# specific settings -----------------------------------------------------
# Firefox XUL dialogs
window XULDialog /firefox\.exe:(?:Mozilla[a-zA-Z]+:)*MozillaDialogClass:MozillaWindowClass$/ : Global
key C-h = BackSpace

# Explorer(desktop)
# after 'g' pressed (2 stroke key map)
keymap2 Explorerg
key g = Home    # jump first file

# after '/' pressed (2 stroke key map)
# quick jump
keymap2 ExplorerSolidus
key j = j
key k = k
key h = h
key l = l
key g = g
key u = u
key d = d
key i = i
key r = r

window Explorer /Explorer\.EXE:(CabinetWClass:SHELLDLL_DefView:SysListView32|Progman:SHELLDLL_DefView:SysListView32)$/ : Global
key j       = ↓
key k       = ↑
key h       = ←
key l       = →
key C-j     = C-↓
key C-k     = C-↑
key C-h     = C-←
key C-l     = C-→
key S-j     = S-↓
key S-k     = S-↑
key S-h     = S-←
key S-l     = S-→
key u       = Backspace                 # upper directory
key d       = Delete                    # delete files
key S-d     = S-Delete                  # delete files completely
key S-g     = End                       # jump last file
key i       = F2                        # edit file / directory name
key S-i     = F2 Home                   # edit file / directory name (at first character)
key S-a     = F2 End                    # edit file / directory name (at last character)
key r       = F5                        # reload
key g       = &Prefix(Explorerg)        # jump keymap2 Explorerg
key Solidus = &Prefix(ExplorerSolidus)  # jump keymap2 ExplorerSolidus

window ExplorerPath /Explorer\.EXE:CabinetWClass:WorkerW:ReBarWindow32:ComboBoxEx32:ComboBox:Edit$/ : Global
key C-h = Backspace


# IrfanView
window IrfanView /i_view32\.exe:IrfanView($|:FullScreenClass$|:#\d+:SysListView32$)/ : Global
